<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <bitmap
            android:gravity="center"
            android:src="@drawable/resource_ringtone_play_bg" />
    </item>
    <item android:id="@android:id/progress">
        <rotate
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:fromDegrees="270"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="270"
            android:useLevel="false" >
            <shape
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:innerRadius="0dip"
                android:shape="ring"
                android:thicknessRatio="2"
                android:useLevel="true" >
                <gradient
                    android:angle="270"
                    android:centerColor="@miui:color/primary_tab_text_selected_color"
                    android:endColor="@miui:color/primary_tab_text_selected_color"
                    android:startColor="@miui:color/primary_tab_text_selected_color"
                    android:useLevel="true" />
            </shape>
        </rotate>
    </item>
    <item>
        <bitmap
            android:gravity="center"
            android:src="@drawable/resource_ringtone_play_fg" />
    </item>

</layer-list>