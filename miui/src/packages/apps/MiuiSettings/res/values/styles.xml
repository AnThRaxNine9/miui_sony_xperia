<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="Transparent" parent ="@android:style/Theme.Holo.Light">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="CryptKeeperBlankTheme" parent="@android:style/Theme.Holo.Light.NoActionBar">
        <item name="android:background">#ff000000</item>
    </style>

    <style name="SecurityPreferenceButtonContainer" parent="@android:style/Holo.Light.SegmentedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:weightSum">2</item>
        <item name="android:dividerPadding">8dip</item>
    </style>

    <style name="wifi_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dip</item>
        <item name="android:layout_marginLeft">16dip</item>
        <item name="android:layout_marginRight">16dip</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="wifi_item_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">6dip</item>
        <item name="android:layout_marginRight">6dip</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="wifi_item_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">6dip</item>
        <item name="android:layout_marginRight">6dip</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="Miui" />

    <style name="Miui.InformationTextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Miui.InformationItemTitleStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:gravity">right</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">10dip</item>
    </style>

    <style name="Miui.Theme.Light.DialogWhenLarge" parent="@android:style/Theme.Holo.Light.DialogWhenLarge">
        <item name="android:homeAsUpIndicator">@miui:drawable/ab_home_up</item>
        <item name="android:actionBarStyle">@miui:style/Widget.Holo.Light.ActionBar.Solid.HomeUp</item>
    </style>

     <style name="Miui.Acitonbar.About.Device" parent="@miui:style/Widget.Holo.Light.ActionBar.Solid.HomeUp">
        <item name="android:background">@drawable/about_device_ab_solid</item>
        <item name="android:titleTextStyle">@style/Miui.ActionBar.Title.About.Device</item>
    </style>

     <style name="Miui.ActionBar.Title.About.Device"
           parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Miui.Theme.Light.About.Device" parent="@miui:style/Theme.Light">
        <item name="android:homeAsUpIndicator">@drawable/about_device_home_up</item>
        <item name="android:actionBarStyle">@style/Miui.Acitonbar.About.Device</item>
    </style>

    <style name="Theme.Light.NoTitle" parent="@miui:style/Theme.Light">
        <item name="android:actionBarStyle">@style/ActionBar.NoTitle</item>
    </style>
    <style name="ActionBar.NoTitle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:displayOptions"></item>
    </style>

    <style name="SecurityPreferenceButton" parent="@android:style/Widget.Holo.Light.Button">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="SecurityLockPatternView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="miui:btnDefaultBackgroundBmp">@drawable/lock_pattern_code_lock_background</item>
        <item name="miui:btnDefaultBmp">@drawable/lock_pattern_code_lock_default_holo</item>
        <item name="miui:btnTouchedBmp">@drawable/lock_pattern_code_lock_touched_holo</item>
        <item name="miui:circleDefaultBmp">@drawable/lock_pattern_indicator_code_lock_point_area_default_holo</item>
        <item name="miui:circleGreenBmp">@drawable/lock_pattern_indicator_code_lock_point_area_green_holo</item>
        <item name="miui:circleRedBmp">@drawable/lock_pattern_indicator_code_lock_point_area_red_holo</item>
        <item name="miui:arrowGreenUpBmp">@drawable/lock_pattern_indicator_code_lock_drag_direction_green_up</item>
        <item name="miui:arrowRedUpBmp">@drawable/lock_pattern_indicator_code_lock_drag_direction_red_up</item>
        <item name="miui:pathStrokeAlpha">64</item>
        <item name="miui:diameterFactor">0.2</item>
    </style>

    <style name="Theme.CreateShortCut" parent="@miui:style/Theme.Light">
    </style>

    <style name="ActionBar.Show.Title" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
         <item name="android:displayOptions">showTitle</item>
    </style>

    <style name="Theme.Light.Show.Title" parent="@android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ActionBar.Show.Title</item>
    </style>

</resources>
