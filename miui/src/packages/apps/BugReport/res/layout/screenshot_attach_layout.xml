<?xml version="1.0" encoding="UTF-8"?>
<com.miui.bugreport.ui.ScreenshotAttachmentLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/screenshot_height"
    android:background="@android:color/white" >

    <ImageView
        android:id="@+id/screenshot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/screenshot_margin_one_pixel"
        android:layout_marginLeft="@dimen/screenshot_margin_one_pixel"
        android:layout_marginRight="@dimen/screenshot_margin_one_pixel"
        android:layout_marginTop="@dimen/screenshot_margin_one_pixel"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/icon_add"
        android:layout_width="@dimen/icon_add_size"
        android:layout_height="@dimen/icon_add_size"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:src="@drawable/icon_add" />

    <ImageView
        android:id="@+id/icon_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:layout_marginBottom="@dimen/icon_delete_margin_left_bottom"
        android:layout_marginLeft="@dimen/icon_delete_margin_left_bottom"
        android:layout_marginRight="@dimen/icon_delete_margin_right_top"
        android:layout_marginTop="@dimen/icon_delete_margin_right_top"
        android:src="@drawable/icon_delete" />

</com.miui.bugreport.ui.ScreenshotAttachmentLayout>