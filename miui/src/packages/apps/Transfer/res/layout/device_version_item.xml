<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/version_item_relativeLayout"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/version_item_height" >

    <TextView
        android:id="@+id/version_title"
        android:layout_marginLeft="@dimen/text_in_list_margin_boundary"
        android:layout_marginRight="@dimen/text_in_list_margin_boundary"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/version_item_height"
        android:textAppearance="@style/TextAppearance.Huge"
        android:gravity="center_vertical" />

</RelativeLayout>