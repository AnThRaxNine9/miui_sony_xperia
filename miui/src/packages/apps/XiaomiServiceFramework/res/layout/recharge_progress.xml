<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/common_padding"
    android:orientation="vertical"
    android:gravity="center_horizontal" >
    <ImageView
        android:id="@+id/progress_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dip" />
    <TextView
        android:id="@+id/progress_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dip"
        android:singleLine="true"
        android:textColor="@color/text_color_black"
        android:textSize="@miui:dimen/text_font_size_huge" />
    <TextView
        android:id="@+id/progress_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dip"
        android:singleLine="true"
        android:textColor="@color/text_color_black"
        android:textSize="@miui:dimen/text_font_size_small" />
    <TextView
        android:id="@+id/progress_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dip"
        android:textColor="@color/text_color_gray"
        android:textSize="@miui:dimen/text_font_size_small"
        android:visibility="gone" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" />
    <TextView
        android:id="@+id/progress_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:textColor="@color/text_color_red"
        android:textSize="@miui:dimen/text_font_size_small"
        android:visibility="gone" />
    <TextView
        android:id="@+id/progress_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:singleLine="true"
        android:textColor="@color/text_color_gray"
        android:textSize="@miui:dimen/text_font_size_small"
        android:text="@string/progress_submit_hint" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/button_call"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btn_call"
            android:background="@drawable/btn_pay_white_bkg"
            android:visibility="gone" />
        <Button
            android:id="@+id/button_progress"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_pay_white_bkg" />
    </LinearLayout>
</LinearLayout>