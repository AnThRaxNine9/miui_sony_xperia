<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="@dimen/notice_text_padding_h"
                android:paddingRight="@dimen/notice_text_padding_h"
        >
    <LinearLayout
            android:id="@+id/bottom_panel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            >
        <Button
                android:id="@+id/tv_skip_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/micloud_welcome_skip_login"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"
                style="@style/HyperLinkStyle"
                android:background="@drawable/btn_transparent_bkg"
                />
        <Button
                android:id="@+id/btn_login"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginTop="12dp"
                android:text="@string/micloud_use_existing"
                android:background="@drawable/btn_orange_bkg"
                android:textColor="#ffffff"
                />
        <Button
                android:id="@+id/btn_reg"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginTop="21dp"
                android:layout_marginBottom="21dp"
                android:text="@string/micloud_reg_new"
                />
    </LinearLayout>
    <TextView
            android:id="@+id/account_dspt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:text="@string/account_dspt"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="?android:attr/textColorSecondary"
            />
    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@id/bottom_panel"
            android:layout_below="@id/account_dspt"
            android:src="@drawable/mi_rabbit"
            android:scaleType="center"
            />
</RelativeLayout>