<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/progress_time_left_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/vp_arrow_left_v5"
        />
        
    <TextView
        android:id="@+id/progress_time_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#CCFFFFFF"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/progress_time_left_imageview"
        android:singleLine="true"
        android:gravity="center"
        android:textSize="31dp"
        android:textStyle="bold" />

     <ImageView
        android:id="@+id/progress_time_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/progress_time_textview"
        android:src="@drawable/vp_arrow_right_v5" />
    
</RelativeLayout>