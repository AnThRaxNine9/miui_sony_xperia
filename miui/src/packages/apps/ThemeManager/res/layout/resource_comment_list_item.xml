<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@miui:drawable/list_medium_middle_item_background"
    android:paddingTop="5dip"
    android:paddingBottom="5dip" >
    <include
        android:id="@+id/resource_comment_content"
        layout="@layout/expandable_textview" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <RatingBar
            android:id="@+id/resource_comment_ratingbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Resource.Comment.RatingBar.ReadOnly" />
        <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/resource_comment_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>