<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <TextView
        android:id="@+id/instruction_pre"
        android:text="@string/instruction_pre"
        android:visibility="gone"
        style="@style/FtpMessageStyle" />
    <TextView
        android:id="@+id/instruction"
        android:text="@string/instruction"
        style="@style/FtpMessageStyle" />

    <TextView
        android:id="@+id/ip_address"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:minWidth="100dip"
        android:background="@drawable/ipaddress_bg"
        android:textStyle="bold"
        android:singleLine="true"
        android:textSize="21dip"
        android:gravity="center"
        android:layout_marginTop="6dip"
        android:layout_marginBottom="25dip"
        android:paddingTop="3dip"
        android:paddingBottom="3dip"
        android:paddingLeft="21dip"
        android:paddingRight="21dip"
        android:textColor="@color/ip_address_text_color" />

    <LinearLayout
        android:id="@+id/start_stop_button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="30dip"
        android:background="@drawable/operation_panel_background"
        android:gravity="center">
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/btn_bottom"
            android:gravity="center">
            <TextView
                android:id="@+id/start_stop_button_text"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="18dip"
                android:drawablePadding="6dip"
                android:textColor="@color/remote_control_button_text_color"
                android:gravity="center"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/ftp_setting"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/ftp_setting" />
    </LinearLayout>
</LinearLayout>
