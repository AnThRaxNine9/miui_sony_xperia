<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        style="@style/LoadStatusBarStyle"
        android:id="@+id/online_loading_status_bar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <include layout="@layout/online_loading_status_bar"/>
    </RelativeLayout>

    <ListView
        android:id="@android:id/list"
        style="@style/SymPickerListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/spacing_to_border"
        android:divider="@null"
        android:dividerHeight="@dimen/spacing_picker_item" />

</LinearLayout>
