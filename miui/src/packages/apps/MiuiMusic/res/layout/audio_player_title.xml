<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_bar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/spacing_to_border"
    android:gravity="center_vertical">
    <TextView
        style="@style/NowplayingPrimaryText"
        android:id="@+id/primary_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/nowplaying_title_margin_top"
        />

    <ImageSwitcher
        android:id="@+id/album_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/album_indicator_bg"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/playlist_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/audio_player_playlist_indicator"
        android:scaleType="center"
        />
</RelativeLayout>
