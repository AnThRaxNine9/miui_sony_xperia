<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_height="wrap_content"
     android:layout_width="match_parent"
     android:orientation="vertical">

    <TextView
        android:id="@+id/billboard_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/preview_list_title_text"
        android:textColor="@color/preview_list_title_text"
        android:includeFontPadding="false"
        android:gravity="center_vertical|left"
        android:background="@drawable/bill_item_bg_top"/>

    <LinearLayout
        android:id="@+id/preview_wrap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bill_item_bg_bottom" >

        <include
            android:id="@+id/song_item_preview_1"
            layout="@layout/bill_preview_item" />

        <include
            android:id="@+id/song_item_preview_2"
            layout="@layout/bill_preview_item" />

        <include
            android:id="@+id/song_item_preview_3"
            layout="@layout/bill_preview_item" />

        <include
            android:id="@+id/song_item_preview_4"
            layout="@layout/bill_preview_item" />
    </LinearLayout>

</LinearLayout>
