<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- For all browser activities -->
    <style name="MusicActivityStyle">
        <item name="android:paddingTop">@dimen/action_bar_height</item>
        <item name="android:background">@drawable/main_bg</item>
    </style>

    <!-- For all browser activities -->
    <style name="MusicTabActivityStyle">
        <item name="android:paddingTop">@dimen/tab_action_bar_padding</item>
        <item name="android:background">@drawable/main_bg</item>
    </style>

    <!-- For primary text of vertical title -->
    <style name="TitlePrimaryText">
        <item name="android:textSize">@dimen/title_primary_text</item>
        <item name="android:textColor">@color/title_primary_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- For secondary text of both horizontal and vertical title -->
    <style name="TitleSecondaryText">
        <item name="android:textSize">@dimen/title_secondary_text</item>
        <item name="android:textColor">@color/title_secondary_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- For horizontal secondary text of both horizontal and vertical title -->
    <style name="HorizontalTitleSecondaryText">
        <item name="android:textSize">@dimen/title_secondary_text</item>
        <item name="android:textColor">@color/horizontal_title_secondary_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- For all ListViews of list activity -->
    <style name="PickerListView">
        <item name="android:divider">@drawable/picker_list_divider</item>
        <item name="android:cacheColorHint">@null</item>
        <item name="android:listSelector">@drawable/item_bg_selector</item>
        <item name="android:scrollbars">none</item>
        <item name="android:paddingLeft">@dimen/spacing_to_border</item>
        <item name="android:layout_gravity">top|left</item>
    </style>

    <style name="SymPickerListView" parent="@style/PickerListView">
        <item name="android:paddingRight">@dimen/spacing_to_border</item>
    </style>

    <!-- For all ListViews of list activity -->
    <style name="PickerGridView">
        <item name="android:divider">@drawable/picker_list_divider</item>
        <item name="android:cacheColorHint">@null</item>
        <item name="android:listSelector">@drawable/item_bg_selector</item>
        <item name="android:scrollbars">none</item>
        <item name="android:paddingLeft">@dimen/spacing_to_border</item>
        <item name="android:paddingRight">@dimen/spacing_to_border</item>
        <item name="android:layout_gravity">top|left</item>
        <item name="android:horizontalSpacing">2.67dp</item>
        <item name="android:verticalSpacing">2.67dp</item>
    </style>

    <!-- For primary text of list item -->
    <style name="ItemPrimaryText">
        <item name="android:textSize">@dimen/item_primary_text</item>
        <item name="android:textColor">@color/item_primary_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <!-- For secondary text of list item -->
    <style name="ItemSecondaryText">
        <item name="android:textSize">@dimen/item_secondary_text</item>
        <item name="android:textColor">@color/item_secondary_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- For item of start activity -->
    <style name="MainItemStyle">
        <item name="android:background">@drawable/item_bg_selector</item>
        <item name="android:paddingLeft">@dimen/spacing_picker_item</item>
        <item name="android:paddingRight">@dimen/spacing_picker_item</item>
    </style>

    <!-- For item of all pickers -->
    <style name="PickerItemStyle">
        <item name="android:background">@drawable/item_bg_selector</item>
        <item name="android:paddingLeft">@dimen/spacing_picker_item</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="BottomBarText">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/bottom_bar_text</item>
        <item name="android:textColor">@color/bottom_bar_text</item>
    </style>

    <!-- For primary icon of item -->
    <style name="ItemPrimaryIcon">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:scaleType">center</item>
    </style>

    <!-- For search history list -->
    <style name="SearchHistoryListStyle">
        <item name="android:layout_marginLeft">@dimen/spacing_to_border</item>
        <item name="android:divider">@drawable/picker_list_divider</item>
        <item name="android:cacheColorHint">@null</item>
        <item name="android:listSelector">@null</item>
        <item name="android:scrollbars">none</item>
        <item name="android:layout_gravity">top|left</item>
        <item name="android:footerDividersEnabled">false</item>
    </style>

    <!-- For the text of time indicator -->
    <style name="IndicatorTextStyle">
        <item name="android:textColor">@color/white_30_transparent</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">-3dip</item>
    </style>

    <!-- For current line of lyric -->
    <style name="LyricHighLightStyle">
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowColor">#ffffae00</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:layout_marginTop">@dimen/lyric_current_margin_top</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- For non-current line of lyric -->
    <style name="LyricNormalStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#4cffffff</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- For seekbars of equalizer -->
    <style name="EqualizerSeekBarStyle">
        <item name="android:thumb">@drawable/equalizer_thumb</item>
        <item name="android:paddingTop">28dip</item>
        <item name="android:paddingBottom">28dip</item>
        <item name="android:progressDrawable">@android:color/transparent</item>
    </style>

    <!-- For icons on tool bar of MediaPlaybackActivity -->
    <style name="ToolIconStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">center</item>
    </style>

    <!-- For CheckBox while batch selecting -->
    <style name="BatchSelectionCheckBoxStyle">
        <item name="android:button">@drawable/btn_check</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_height">32dip</item>
        <item name="android:layout_width">32dip</item>
    </style>

    <!-- For now playing item in MediaPlaybackActivity -->
    <style name="NowplayingItemStyle">
        <item name="android:background">@drawable/item_bg_selector</item>
        <item name="android:paddingLeft">@dimen/nowplaying_item_padding</item>
        <item name="android:paddingRight">@dimen/nowplaying_item_padding</item>
    </style>

    <!-- 首页播放信息中的 primary text -->
    <style name="MainPrimaryText">
        <item name="android:textSize">@dimen/main_primary_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">@color/black_70_transparent</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:maxWidth">@dimen/item_text_width</item>
    </style>

    <!-- 首页播放信息中的 secondary text -->
    <style name="MainSecondaryText">
        <item name="android:textSize">@dimen/main_secondary_text</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">@color/black_70_transparent</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxWidth">@dimen/item_text_width</item>
    </style>

    <!-- 首页播放信息中的 primary text -->
    <style name="NowplayingPrimaryText">
        <item name="android:textSize">@dimen/nowplaying_primary_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">@color/black_70_transparent</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:maxWidth">@dimen/item_text_width</item>
    </style>

    <!-- 首页播放信息中的 secondary text -->
    <style name="NowplayingSecondaryText">
        <item name="android:textSize">@dimen/nowplaying_secondary_text</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">@color/black_70_transparent</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxWidth">@dimen/item_text_width</item>
    </style>

    <!-- 首页列表item信息 -->
    <style name="MainItemPrimaryText">
        <item name="android:textSize">@dimen/main_item_primary_text</item>
        <item name="android:textColor">@color/main_item_primary_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="MainItemSecondaryText">
        <item name="android:textSize">@dimen/main_item_secondary_text</item>
        <item name="android:textColor">@color/main_item_secondary_text</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- 文字跑马灯效果 -->
    <style name="MarqueeTextStyle">
        <item name="android:singleLine">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>

    <!-- 歌曲详细信息字体 -->
    <style name="TrackDetailText">
        <item name="android:singleLine">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/item_secondary_text</item>
        <item name="android:textColor">@color/white_70_transparent</item>
    </style>

    <!-- Style of AlphabetFastIndexer -->
    <style name="AlphaFastIndexerStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="miui:indexerBackground">@drawable/alphabet_indexer_bg</item>
        <item name="miui:indexerTextColor">@color/white_30_transparent</item>
    </style>

    <!-- Style of item group title -->
    <style name="ItemGroupTitleStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/playlist_group_title_text</item>
        <item name="android:background">@drawable/playlist_group_title_bg</item>
    </style>

    <!-- Style of playlist group title -->
    <style name="PlaylistGroupTitleStyle" parent="@style/ItemGroupTitleStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/playlist_group_title_text</item>
        <item name="android:background">@drawable/playlist_group_title_bg</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">14dp</item>
    </style>

    <style name="ErrorMsgTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/error_margin_top</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/error_text_size</item>
        <item name="android:visibility">gone</item>
        <item name="android:text">@string/music_browser_label</item>
    </style>

    <style name="CategoryNumStyle">
        <item name="android:visibility">visible</item>
        <item name="android:textSize">@dimen/category_num_size</item>
        <item name="android:textColor">@color/white_50_transparent</item>
    </style>

    <!-- Style of load status bar -->
    <style name="LoadStatusBarStyle">
        <item name="android:layout_marginTop">@dimen/spacing_to_border</item>
    </style>

    <!-- Style of playlist grid item -->
    <style name="PlaylistItemStyle">
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Style of playlist grid item text-->
    <style name="PlaylistItemTextStyle">
        <item name="android:maxLines">2</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Style of default EditText -->
    <style name="EditTextStyle">
        <item name="android:background">@drawable/editor_default_bg</item>
        <item name="android:padding">6dp</item>
    </style>
</resources>
