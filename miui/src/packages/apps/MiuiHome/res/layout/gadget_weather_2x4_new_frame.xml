<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:id="@+id/up"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1.0">
            <ImageView
                android:id="@+id/up_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="matrix"
            />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="16dip">
                <LinearLayout
                    android:id="@+id/widget_2x4_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/widget_2x4_time_h"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="50dip"
                        android:layout_alignParentTop="true"
                        android:textColor="#FFFFFFFF"
                        android:layout_marginTop="-5dip"
                        style="@style/gadget_weather_text_shadow" />
                    <TextView
                        android:id="@+id/widget_2x4_time_spliter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="50dip"
                        android:layout_alignParentTop="true"
                        android:textColor="#FFFFFFFF"
                        android:layout_marginTop="-9dip"
                        android:text="@string/gadget_weather_time_spliter"
                        style="@style/gadget_weather_text_shadow" />
                    <TextView
                        android:id="@+id/widget_2x4_time_m"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="50dip"
                        android:layout_alignParentTop="true"
                        android:textColor="#FFFFFFFF"
                        android:layout_marginTop="-5dip"
                        style="@style/gadget_weather_text_shadow" />
                </LinearLayout>
                <TextView
                    android:id="@+id/widget_2x4_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-11dip"
                    android:layout_marginLeft="3dip"
                    android:textSize="14dip"
                    android:layout_below="@id/widget_2x4_time"
                    android:textColor="#FFFFFFFF"
                    style="@style/gadget_weather_text_shadow_1" />
                <TextView
                    android:id="@+id/widget_2x4_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dip"
                    android:textSize="14dip"
                    android:layout_below="@id/widget_2x4_date"
                    android:textColor="#FFFFFFFF"
                    style="@style/gadget_weather_text_shadow_1" />
            </RelativeLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/down"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1.0">

            <ImageView
                android:id="@+id/down_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="matrix"
            />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="19dip"
                android:paddingBottom="5dip">

                <LinearLayout
                    android:id="@+id/widget_2x4_last_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true">
                    <TextView
                        android:id="@+id/widget_2x4_temp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dip"
                        android:textSize="38dip"
                        android:textColor="#FFFFFFFF"
                        style="@style/gadget_weather_text_shadow_1" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="7dip">
                        <TextView
                            android:id="@+id/widget_2x4_temp_range"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14dip"
                            android:textColor="#FFFFFFFF"
                            style="@style/gadget_weather_text_shadow_1" />
                        <TextView
                            android:id="@+id/widget_2x4_wind"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-2dip"
                            android:textSize="14dip"
                            android:textColor="#FFFFFFFF"
                            style="@style/gadget_weather_text_shadow_1" />
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/widget_2x4_weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-5dip"
                    android:textSize="22dip"
                    android:layout_above="@id/widget_2x4_last_line"
                    android:textColor="#FFFFFFFF"
                    style="@style/gadget_weather_text_shadow_1" />
            </RelativeLayout>
        </FrameLayout>

    </LinearLayout>
</FrameLayout>
