<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:gravity="center_vertical"
     android:background="@miui:drawable/list_medium_middle_item_background">
     <TextView
         android:textAppearance="@miui:style/TextAppearance.ListView.PrimaryItem"
         android:id="@+id/task_detail_title"
         android:layout_width="0dip"
         android:layout_height="wrap_content"
         android:layout_weight="1"/>
     <TextView
         android:textAppearance="@miui:style/TextAppearance.ListView.SecondaryItem"
         android:id="@+id/task_detail_summary"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>
</LinearLayout>
