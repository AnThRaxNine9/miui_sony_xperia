<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style
        name="TextAppearance"
        parent="android:TextAppearance">
        <item
            name="android:textColor">@color/black</item>
    </style>
    <style
        name="TextAppearance.Content">
        <item
            name="android:textSize">18sp</item>
        <item
            name="android:textColor">#666666</item>
    </style>
    <style
        name="TextAppearance.Medium">
        <item
            name="android:textSize">18sp</item>
    </style>
    <style
        name="TextAppearance.Small">
        <item
            name="android:textSize">14sp</item>
    </style>
    <style
        name="TextAppearance.Button">
        <item
            name="android:textSize">16sp</item>
        <item
            name="android:textColor">@color/deepgrey</item>
    </style>

    <style name="RecommendStyle" parent="@miui:style/Theme.Light">
        <item name="android:homeAsUpIndicator">@drawable/recommend_vote_icon</item>
    </style>

    <style name="UpdateFeedbackStyle" parent="@miui:style/Theme.Light">
        <item name="android:homeAsUpIndicator">@drawable/update_feedback_icon</item>
    </style>
</resources>
