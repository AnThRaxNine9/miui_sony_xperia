<?xml version="1.0" encoding="utf-8"?>
<com.miui.gallery.bigscreen.DeviceItem
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight = "@dimen/bigscreen_device_item_horonzital_margin"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/device_image"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="@dimen/bigscreen_device_item_margin_top"
    />

    <TextView
        android:id="@+id/device_title"
        android:layout_width="@dimen/bigscreen_device_item_text_max_width"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:singleLine="true"
    />
</com.miui.gallery.bigscreen.DeviceItem>

