<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/edit_pop_bg"
>
    <ImageView android:id="@+id/cut"
        style="@style/SingleViewEditActionButton"
        android:src="@drawable/cut_icon_normal"
    />
    <ImageView android:id="@+id/turn_left"
        style="@style/SingleViewEditActionButton"
        android:src="@drawable/lturn_icon_normal"
    />
    <ImageView android:id="@+id/turn_right"
        style="@style/SingleViewEditActionButton"
        android:src="@drawable/rturn_icon_normal"
    />
    <ImageView android:id="@+id/edit"
        style="@style/SingleViewEditActionButton"
        android:src="@drawable/edit_icon_normal"
    />
</LinearLayout>
