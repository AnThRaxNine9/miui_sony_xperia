<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Activity 主题 -->
    <style name="Theme.Holo.Light" parent="@style/Theme.Sherlock.Light" />

    <style name="Theme.Holo.Light.Dialog" parent="Theme.Holo.Light" >
        <item name="windowAnimationStyle">@android:style/Animation.Translucent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Theme.Holo.Light.Overlay" parent="Theme.Holo.Light" >
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="Theme.Holo.Light.Normal" parent="Theme.Holo.Light.Overlay" >
        <item name="actionBarStyle">@style/Theme.Holo.Light.ActionBar</item>
        <item name="android:actionBarStyle">@style/Theme.Holo.Light.ActionBar</item>
    </style>

    <style name="Theme.Holo.Light.TitleLine" parent="Theme.Holo.Light.Overlay">
        <item name="actionBarStyle">@style/Theme.Holo.Light.ActionBar.TitleLine</item>
        <item name="android:actionBarStyle">@style/Theme.Holo.Light.ActionBar.TitleLine</item>
    </style>

    <style name="Theme.Holo.Light.NoOverlay" parent="Theme.Holo.Light" >
        <item name="actionBarStyle">@style/Theme.Holo.Light.ActionBar</item>
        <item name="android:actionBarStyle">@style/Theme.Holo.Light.ActionBar</item>
    </style>

    <style name="Theme.Holo.Light.NoOverlay.TitleLine" parent="Theme.Holo.Light">
        <item name="actionBarStyle">@style/Theme.Holo.Light.ActionBar.TitleLine</item>
        <item name="android:actionBarStyle">@style/Theme.Holo.Light.ActionBar.TitleLine</item>
    </style>

    <style name="Theme.Holo.Light.ActionBar" parent="Widget.Sherlock.Light.ActionBar.Solid">
        <item name="background">@null</item>
        <item name="android:background">@null</item>
        <item name="icon">@drawable/logo</item>
        <item name="android:icon">@drawable/logo</item>
        <item name="logo">@drawable/logo</item>
        <item name="android:logo">@drawable/logo</item>
    </style>

    <style name="Theme.Holo.Light.ActionBar.TitleLine">
        <item name="background">@drawable/title_line_bg</item>
        <item name="android:background">@drawable/title_line_bg</item>
    </style>

    <style name="Background">
        <item name="android:paddingTop">@dimen/main_padding_top</item>
        <item name="android:background">@drawable/main_bg</item>
    </style>

    <style name="Background.LargeTitle">
        <item name="android:paddingTop">@dimen/main_padding_top_large</item>
    </style>

    <style name="Background.Split">
        <item name="android:paddingBottom">@dimen/main_padding_bottom</item>
    </style>

    <!-- 样式 -->
    <style name="Button">
        <item name="android:background">@drawable/common_btn</item>
        <item name="android:textAppearance">@style/TextAppearance.Button</item>
        <item name="android:textColor">@color/primary_text</item> <!-- Button默认样式中也定义了color，会使得textAppearance中的color失效 -->
    </style>

    <style name="Button.Tab">
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.Button.Tab</item>
        <item name="android:textColor">@color/tab_text</item> <!-- Button默认样式中也定义了color，会使得textAppearance中的color失效 -->
    </style>

    <style name="Button.Action">
        <item name="android:background">@drawable/action_btn</item>
        <item name="android:textAppearance">@style/TextAppearance.Button.Action</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/action_button_width</item>
        <item name="android:minHeight">@dimen/action_button_height</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Button.Large">
        <item name="android:background">@drawable/common_btn</item>
        <item name="android:textAppearance">@style/TextAppearance.Button.Large.Primary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/large_button_height</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ListView">
        <item name="android:cacheColorHint">@null</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:fastScrollEnabled">true</item>
        <item name="android:divider">@null</item>
        <item name="android:fadingEdge">@null</item>
    </style>

    <!-- ratingBar style -->
    <style name="RatingBar.Edit" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar</item>
        <item name="android:isIndicator">false</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">1</item>
        <item name="android:maxHeight">@dimen/ratingbar_size</item>
        <item name="android:minHeight">@dimen/ratingbar_size</item>
    </style>

    <style name="RatingBar.ReadOnly" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_readonly</item>
        <item name="android:isIndicator">true</item>"
        <item name="android:stepSize">0.5</item>
        <item name="android:maxHeight">@dimen/ratingbar_readonly_size</item>
        <item name="android:minHeight">@dimen/ratingbar_readonly_size</item>
    </style>

    <!-- 字体 -->
    <style name="TextAppearance">
        <item name="android:textColorHighlight">@color/text_color_highlight</item>
        <item name="android:textColorLink">@color/text_color_link</item>
        <item name="android:shadowColor">@color/text_color_shadow</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="TextAppearance.Primary"><!-- 需要反色 -->
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/text_font_size_huge</item>
    </style>

    <style name="TextAppearance.Secondary"><!-- 需要反色 -->
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">@dimen/text_font_size_small</item>
    </style>

    <style name="TextAppearance.Content"><!-- 不需要反色 -->
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textSize">@dimen/text_font_size_medium</item>
    </style>

    <style name="TextAppearance.Subject"><!-- 不需要反色 -->
        <item name="android:textColor">@color/text_color_secondary</item>
        <item name="android:textSize">@dimen/text_font_size_medium</item>
    </style>

    <style name="TextAppearance.Editor" parent="android:style/TextAppearance.Widget.EditText"><!-- 不需要反色 -->
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textSize">@dimen/text_font_size_large</item>
    </style>

    <style name="TextAppearance.Button" parent="TextAppearance.Primary"/><!-- 需要反色 -->

    <style name="TextAppearance.Button.Action"><!-- 需要反色 -->
        <item name="android:textSize">@dimen/text_font_size_small</item>
    </style>

    <style name="TextAppearance.Button.Action.Price"><!-- 需要反色 -->
        <item name="android:textColor">@color/highlight_text</item>
    </style>

    <style name="TextAppearance.Button.Large" /><!-- 需要反色 -->

    <style name="TextAppearance.Button.Large.Primary"><!-- 需要反色 -->
        <item name="android:textSize">@dimen/text_font_size_large</item>
    </style>

    <style name="TextAppearance.Button.Large.Primary.Price"><!-- 需要反色 -->
        <item name="android:textColor">@color/highlight_text</item>
    </style>

    <style name="TextAppearance.Button.Large.Secondary"><!-- 需要反色 -->
        <item name="android:textSize">@dimen/text_font_size_small</item>
    </style>

    <style name="TextAppearance.Button.Tab" ><!-- 需要反色和选中状态 -->
        <item name="android:textColor">@color/tab_text</item>
        <item name="android:textSize">@dimen/text_font_size_medium</item>
    </style>
</resources>
