<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@drawable/edit_title_yellow">

    <ImageView
        android:id="@+id/up"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="4dip"
        android:paddingRight="4dip"
        android:src="@drawable/header_up"
        android:background="@drawable/popup_window_item_bg" />

    <TextView
        android:id="@+id/time"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingRight="@dimen/notes_edit_header_padding_size"
        android:singleLine="true"
        android:ellipsize="end"
        android:textAppearance="@style/TextAppearanceHeaderText" />

    <TextView
        android:id="@+id/alert"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/notes_edit_header_padding_size"
        android:paddingRight="@dimen/notes_edit_header_padding_size"
        android:drawableLeft="@drawable/header_alert"
        android:gravity="center_vertical"
        android:textAppearance="@style/TextAppearanceHeaderText"
        android:background="@drawable/popup_window_item_bg" />

    <ImageView
        android:id="@+id/attachment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/notes_edit_header_padding_size"
        android:paddingRight="@dimen/notes_edit_header_padding_size"
        android:src="@drawable/header_attachment"
        android:background="@drawable/popup_window_item_bg" />

    <ImageView
        android:id="@+id/color"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/notes_edit_header_padding_size"
        android:paddingRight="@dimen/notes_edit_header_padding_size"
        android:src="@drawable/header_color"
        android:background="@drawable/popup_window_item_bg" />

</LinearLayout>
