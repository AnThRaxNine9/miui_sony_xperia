<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/panel"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0.67dip"
        android:gravity="center_vertical"
        android:background="@*miui:drawable/textview_panel_bg">
        <TextView
            android:id="@+id/view_image"
            style="@*miui:style/TextViewFloatPanelButton"
            android:text="@string/image_edit_action_view" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@*miui:drawable/textview_panel_separator"/>
        <TextView
            android:id="@+id/replace_image"
            style="@*miui:style/TextViewFloatPanelButton"
            android:text="@string/image_edit_action_replace" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@*miui:drawable/textview_panel_separator"/>
        <TextView
            android:id="@+id/delete_image"
            style="@*miui:style/TextViewFloatPanelButton"
            android:text="@string/image_edit_action_delete" />
    </LinearLayout>

    <ImageView android:id="@+id/arrow_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:src="@*miui:drawable/textview_panel_arrow_down" />
</FrameLayout>
