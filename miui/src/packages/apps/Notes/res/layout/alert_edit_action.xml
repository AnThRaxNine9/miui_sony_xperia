<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="2dip"
    android:paddingRight="2dip"
    android:paddingBottom="4dip"
    android:orientation="horizontal"
    android:gravity="center_vertical">
    <TextView
        android:id="@+id/update_alert"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="@dimen/action_padding_size"
        android:paddingRight="@dimen/action_padding_size"
        android:gravity="center"
        android:drawableTop="@drawable/ic_modify_alert"
        android:background="@drawable/popup_window_item_bg"
        android:text="@string/alert_edit_action_update" />
    <TextView
        android:id="@+id/delete_alert"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="@dimen/action_padding_size"
        android:paddingRight="@dimen/action_padding_size"
        android:gravity="center"
        android:drawableTop="@drawable/ic_delete_alert"
        android:background="@drawable/popup_window_item_bg"
        android:text="@string/alert_edit_action_delete" />
</LinearLayout>
