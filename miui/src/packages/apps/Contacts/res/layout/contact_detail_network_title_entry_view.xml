<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/primary_action_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:orientation="horizontal"
        android:background="@miui:drawable/list_medium_top_item_background"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/network_title"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginLeft="@dimen/contact_detail_padding_left" />

        <ImageView
            android:id="@+id/network_icon"
            android:layout_width="@dimen/detail_network_icon_size"
            android:layout_height="@dimen/detail_network_icon_size"
            android:layout_marginLeft="@dimen/detail_item_icon_margin"
            android:layout_marginRight="@dimen/contact_detail_padding_right"
            android:layout_gravity="center_vertical"
            android:scaleType="centerInside" />
    </LinearLayout>
</FrameLayout>
